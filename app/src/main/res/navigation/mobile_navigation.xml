<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_mydevice">

    <fragment
        android:id="@+id/navigation_auth"
        android:name="com.example.phoenixmobile.ui.auth.AuthFragment"
        android:label="Аутентификация"
        tools:layout="@layout/fragment_auth" >
        <action
            android:id="@+id/action_auth_to_main"
            app:destination="@+id/navigation_mydevice"
            app:popUpTo="@+id/navigation_auth"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/navigation_chat"
        android:name="com.example.phoenixmobile.ui.chat.ChatFragment"
        android:label="@string/title_chat"
        tools:layout="@layout/fragment_chat" />

    <fragment
        android:id="@+id/navigation_mydevice"
        android:name="com.example.phoenixmobile.ui.device.MyDeviceFragment"
        android:label="@string/title_mydevice"
        tools:layout="@layout/fragment_my_device" />

</navigation>